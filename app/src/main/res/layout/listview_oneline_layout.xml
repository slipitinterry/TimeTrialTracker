<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:textColor="#000000"
    android:background="#FF0000">

    <LinearLayout
        android:id="@+id/rider_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView android:id="@+id/rider_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="rider#"
        android:textStyle="bold"
        android:textSize="15sp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp" />

    <TextView android:id="@+id/rider_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="rider name"
        android:textSize="20sp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView android:id="@+id/rider_last_seen_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Last Seen"
            android:textSize="15sp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:textStyle="bold" />

        <TextView android:id="@+id/rider_last_seen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="last seen"
            android:textSize="15sp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp" />

        <TextView android:id="@+id/rider_eta_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ETA:"
            android:textSize="15sp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:textStyle="bold" />

        <TextView android:id="@+id/rider_eta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="rider eta"
            android:textSize="15sp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp" />
    </LinearLayout>


</LinearLayout>